{% extends 'base.html.twig' %}

{% block title %}Hello ModeleController!{% endblock %}

{% block body %}
    <div class="container">
    <h1>Liste des modeles</h1>
    {% if modele is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <td>Nom </td>
                    <td>Prix</td>
                </tr>
            </thead>
            <tbody>
            {% for mod in modeles %}
                <tr>
                    <td>{{mod.nom}}</td>
                    <td>{{mod.prix}} </td>
                    <td>
                    <a href="{{path('modele', {"id": mod.id})}}">Afficher
                    </a>
                    <a href="{{path('delete_modele', {"id": mod.id})}}">Supprimer
                    </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
    {% else %}
        <p>Il n'y a aucun modele</p>
    {% endif %}
    </div>
    {{ form(ajout)}}
{% endblock %}
